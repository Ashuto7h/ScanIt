<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.activities.QRBarcodeScanResultActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout_scanResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/show_data_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/scanResult_tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/appBarLayout_scanResult"
        android:layout_marginTop="30dp"
        android:background="@color/grey"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="22sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/openInBrowser_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            android:background="@drawable/rounded_button_color_accent"
            android:drawableEnd="@drawable/ic_baseline_open_in_browser_24"
            android:elevation="10dp"
            android:padding="8dp"
            android:text="@string/open_in_browser"
            android:textAllCaps="false"
            android:textSize="15sp" />

        <Button
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            android:background="@drawable/rounded_button_color_accent"
            android:drawableEnd="@drawable/ic_baseline_share_24"
            android:elevation="10dp"
            android:padding="8dp"
            android:text="@string/share"
            android:textAllCaps="false"
            android:textSize="15sp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

</RelativeLayout>